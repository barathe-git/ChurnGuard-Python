# ChurnGuard Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
DEBUG=False
SECRET_KEY=your-secret-key-change-in-production
SESSION_TIMEOUT=3600

# API Keys
GEMINI_API_KEY=your-gemini-api-key-here

# MongoDB Atlas Configuration
# Get your connection string from MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority
MONGODB_DATABASE=churnguard_db
MONGODB_COLLECTION_PREFIX=churnguard

# MongoDB Connection Pool Settings (Optional - defaults will be used if not set)
MONGODB_MAX_POOL_SIZE=100
MONGODB_MIN_POOL_SIZE=10
MONGODB_MAX_IDLE_TIME_MS=30000
MONGODB_CONNECT_TIMEOUT_MS=10000
MONGODB_SERVER_SELECTION_TIMEOUT_MS=5000

# Campaign
REDIS_URL=redis://localhost:6379/0
TWILIO_API_KEY=your-twilio-account-sid
TWILIO_API_SECRET=your-twilio-auth-token
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SENDER_EMAIL=username@email.com
SENDER_PASSWORD=password

# Instructions:
# 1. Get your GEMINI_API_KEY from https://ai.google.dev/
# 2. Create a MongoDB Atlas cluster at https://cloud.mongodb.com/
# 3. Get your connection string from the Atlas dashboard
# 4. Replace the MONGODB_URI with your actual connection string
# 5. Update MONGODB_DATABASE if you want a different database name
